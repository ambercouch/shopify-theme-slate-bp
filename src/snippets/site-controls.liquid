<div class="site-control">

  <ul class="site-control__list">
    <li class="site-control__item--menu">
      <a id="menuButtonOpen" href="#" class="site-control__link" data-state="off">
        <span class="site-control__lable">Menu</span>
      {% include 'icon-hamburger' %}
      </a>
    </li>
    <li class="site-control__item">
      <a href="#" class="site-control__link">
        <span class="site-control__lable">Search</span>
      {% include 'icon-search' %}
      </a>
    </li>
{% if shop.customer_accounts_enabled %}

    {% if customer %}
      <li class="site-control__item--customer">
        {% if customer.first_name != blank %}
          {% capture first_name %}<a href="/account">{{ customer.first_name }}</a>{% endcapture %}
          {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}
        {% else %}
          <a href="/account">{{ 'layout.customer.account' | t }} {% include 'icon-user' %} </a>
        {% endif %}
      </li>
      <li class="site-control__item--customer">
        {{ 'layout.customer.log_out' | t | customer_logout_link }} {% include 'icon-user' %}
      </li>
    {% else %}
      <li class="site-control__item--customer">
        {{ 'layout.customer.log_in' | t | customer_login_link }} {% include 'icon-user' %}
      </li>
    {% endif %}
{% endif %}
    <li class="site-control__item" >
      <a class="site-control__link" href="/cart" class="site-control__cart-link" >
        <span class="site-control__lable">{{ 'layout.cart.title' | t }}</span>
        {% include 'icon-cart' %}
        <span class="site-control__cart-count">({{ cart.item_count }})</span>
      </a>
    </li>
  </ul><!-- /.site-control__list -->

  <div class="site-control__search" data-state="off">
<form action="/search" method="get" role="search" data-state="off">
  <label class="site-control__lable" for="Search" class="label-hidden">
    {{ 'general.search.placeholder' | t }}
  </label>
  <input type="search"
         name="q"
         id="Search"
         value="{{ search.terms | escape }}"
         placeholder="{{ 'general.search.placeholder' | t }}">
  <button type="submit" class="btn">
    {% include 'icon-search' %}
    <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
  </button>
</form>
</div><!-- site-controls__search -->

</div><!-- site-controls -->