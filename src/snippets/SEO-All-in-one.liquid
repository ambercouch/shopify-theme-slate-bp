<meta name="google" content="notranslate" />
{%- endif -%}
{%- if nosnippet == "true" -%}
{{ nl }}
<meta name="robots" content="nosnippet">
{%- endif -%}
{%- if noimageindex == "true" -%}
{{ nl }}
<meta name="robots" content="noimageindex">
{%- endif -%}
{%- if noodp == "true" -%}
{{ nl }}
