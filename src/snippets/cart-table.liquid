<div class="c-cart-table">
  <table class="c-cart-table__table">
    {%  comment %}
    <thead class="c-cart-table__table-head small--hide">
    <tr>
      <th colspan="2" class="c-cart-table__table-heading" >{{ 'cart.label.product' | t }}</th>
      <th class="c-cart-table__table-heading">{{ 'cart.label.price' | t }}</th>
      <th class="c-cart-table__table-heading">{{ 'cart.label.quantity' | t }}</th>
      <th class="c-cart-table__table-heading">{{ 'cart.label.total' | t }}</th>
    </tr>
    </thead>
    {% endcomment %}
    <tbody>

    {% for item in cart.items %}

    {%- assign low_price = settings.low_price_product | times: 1  -%}
    {%- if item.line_price >  low_price -%}
      <!-- line price hi {{ item.line_price }}-->
      {%- assign minQty = 1 -%}
    {%- else -%}
      <!-- line price low {{ item.line_price }}-->
      {%- assign minQty = settings.low_cost_minimum_qty | times: 1-%}
    {%- endif -%}

    {%- assign currentQty = item.quantity -%}

    {% if currentQty < minQty %}
      <!-- low quatity {{ currentQty }}-->
    {% assign currentQty = minQty %}
    {% endif %}


    {% comment %}

    Cart Item Template
    =====================
    The data-label attributes on <td> elements are mobile-friendly
      helpers used for responsive-table labels
      {% endcomment %}

      <tr class="c-cart-table__table-row ">
        <td class="c-cart-table__cell--image" data-label="{{ 'customer.order.product' | t }}">
          <a class="c-cart-table__link-image" href="{{ item.url | within: collections.all }}">
            <img class="c-cart-table__link-img" src="{{ item | img_url: '150x150' }}" alt="{{ item.title | escape }}">
          </a>
        </td>
        <td class="c-cart-table__cell--info" >
          <div class="c-cart-table__product-title">
            <a class="c-cart-table__product-title-link" href="{{ item.url }}">{{ item.product.title }}</a>

            {% unless item.variant.title contains 'Default' %}
            <small class="c-cart-table__product-type" >{{ item.variant.title }}</small>
            {% endunless %}
            <small class="c-cart-table__product-type" >{{ item.variant.sku }}</small>
          </div>

          {%- assign property_size = item.properties | size -%}

          {% if property_size > 0 %}
            <small>
              {% for p in item.properties %}
                {% unless p.last == blank %}
                {{ p.first }}:

                {% if p.last contains '/uploads/' %}
                  <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                {% else %}
                  {{ p.last }}
                {% endif %}

                {% endunless %}
              {% endfor %}
            </small>
          {% endif %}

          <a class="c-cart-table__remove" href="/cart/change?line={{ forloop.index }}&amp;quantity=0">
            <span class="c-cart-table__remove-label">{{ 'cart.general.remove' | t }}</span>
          </a>

        </td>
        <td class="c-cart-table__cell--product-price" data-label="{{ 'cart.label.price' | t }}">
          {% if item.original_line_price != item.line_price %}
            <span class="visually-hidden">{{ 'cart.label.discounted_price' | t }}</span>
            <span class="c-cart-table__product-price-text" >{{ bold_price | money_without_trailing_zeros }}</span>
            <span class="visually-hidden">{{ 'cart.label.original_price' | t }}</span>
            <span class="c-cart-table__product-price-text--original"  >{{ item.original_price | money_without_trailing_zeros }}</span>
          {% else %}
           <!-- <span class="c-cart-table__product-price-text" >{{ bold_price | money_without_trailing_zeros }}</span> -->
            <span class="c-cart-table__product-price-text" >{{ item.line_price | money_without_trailing_zeros }}</span>
          {% endif %}
        </td>
        <td class="c-cart-table__cell--qty" data-label="{{ 'cart.label.quantity' | t }}">
          <input class="c-cart-table__qty-input"
                 type="number"
                 name="updates[]"
                 id="updates_{{ item.key }}"
                 value="{{ currentQty }}"
                 min="{{ minQty }}"
                 size="aria-label="{{ 'cart.general.item_quantity' | t }}">
          <input class="c-cart-table__qty-input-submit" type="submit" name="update" value="{{ 'cart.general.update' | t }}">
        </td>
        <td class="c-cart-table__cell--line-price" data-label="{{ 'cart.label.total' | t }}">
          <span class="c-cart-table__line-price-text">{{ item.line_price | money_without_trailing_zeros }}</span>
        </td>
      </tr>

      {% endfor %}
    </tbody>
  </table>

</div>
