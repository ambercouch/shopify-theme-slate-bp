<div class="product-gallery">
  <a href="{{ featured_image | img_url: '900x900' }}" data-product-featured-link ><img class="product-gallery__featured" src="{{ featured_image | img_url: '700x700' }}" alt="{{ featured_image.alt | escape }}" data-product-featured-image></a>
  {% comment %}
    {% comment %}
      070819 removed product gallery after meeting
      {% endcomment  %}
  {% if product.images.size > 1 %}

    <ul class="product-gallery__list">
        {% for image in product.images %}
        <li class="product-gallery__item">
            <img class="product-gallery__img" src="{{ image.src | img_url: '160x160' }}" alt="{{ image.title }}" title="{{ image.title }}" data-variantLink="{{ image.src | img_url: '900x900' }}" data-variantImage="{{ image.src | img_url: '700x700' }}" data-variantTitle="{{ product.title }}" data-variantId="{{ product.id }}">

        </li>
      {% endfor %}
    </ul>
  {% endif %}
  {% endcomment %}
</div>
