
{% capture classCustomer %}
  {% if customer %} customer--in {% else %} customer--out {% endif %}
{% endcapture %}
{%- capture dataHandle -%}
  {{ request.path | handleize }}
{% endcapture %}
<!-- current tags {{ current_tags }} -->

<body class="ac-body-tag template-{{ template | split: '.' | first }} {{ classCustomer }} "
      data-template="{{ template | handleize |  replace: '-', ''}}"
      data-handle="{{ dataHandle }}"
      data-current-tags="{{ current_tags  | join: '|' | replace: ' ', '-' | downcase }}">
