

<!--JSON-LD data generated by Smart SEO-->
<script type="application/ld+json">
    
    {
        "@context": "https://schema.org",
        "@type": "Website",
        "url": "{{ shop.url }}",
        "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={query}",
        "query-input": "required name=query"
        }
    }

</script>
{% assign enableStructuredDataForRealStore = false %}
{% if enableStructuredDataForRealStore == true %}
<!--JSON-LD data generated by Smart SEO-->
<script type="application/ld+json">
    {% capture lat %}###LAT###{% endcapture %}{% capture lng %}###LNG###{% endcapture %}{% capture locUrl %}###LOCURL###{% endcapture %}{% capture logo %}{% endcapture %}{% capture socialMediaLinks %}{% endcapture %}
    {
        "@context": "https://schema.org",
        "@type": "Store",
        "name": "{{ shop.name }}",
        "url": "{{ shop.url }}",
        "description": "{{ shop.description }}",
        {% if logo != blank %}"logo": "{{ logo }}",{% endif %}
        {% if logo != blank %}"image": "{{ logo }}",{% endif %}
        {% if socialMediaLinks != blank %}"sameAs": [{{ socialMediaLinks }}],{% endif %}
        {% if locUrl != blank %}"hasMap": "{{ locUrl }}", {% endif %}
        "address": {
            "@type": "PostalAddress",
            {% if shop.address.street != blank %}"streetAddress": "{{ shop.address.street | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.city != blank %}"addressLocality": "{{ shop.address.city | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.province != blank %}"addressRegion": "{{ shop.address.province | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.zip != blank %}"postalCode": "{{ shop.address.zip | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.country != blank %}"addressCountry": "{{ shop.address.country | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}"{% endif %}
        },
        "priceRange": "###PRICERANGE###"{% if shop.address.phone != blank %},
        "telephone": "{{ shop.address.phone | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}"{% endif %}{% if lat != blank and lng != blank %},
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": {{ lat }},
            "longitude": {{ lng }}
        }{% endif %}
    }

</script>
{% else %}
<!--JSON-LD data generated by Smart SEO-->
<script type="application/ld+json">
    {% capture lat %}###LAT###{% endcapture %}{% capture lng %}###LNG###{% endcapture %}{% capture locUrl %}###LOCURL###{% endcapture %}{% capture logo %}{% endcapture %}{% capture socialMediaLinks %}{% endcapture %}
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "{{ shop.name }}",
        "url": "{{ shop.url }}",
        "description": "{{ shop.description }}",
        {% if logo != blank %}"logo": "{{ logo }}",{% endif %}
        {% if logo != blank %}"image": "{{ logo }}",{% endif %}
        {% if socialMediaLinks != blank %}"sameAs": [{{ socialMediaLinks }}],{% endif %}
        "address": {
            "@type": "PostalAddress",
            {% if shop.address.street != blank %}"streetAddress": "{{ shop.address.street | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.city != blank %}"addressLocality": "{{ shop.address.city | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.province != blank %}"addressRegion": "{{ shop.address.province | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.zip != blank %}"postalCode": "{{ shop.address.zip | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.country != blank %}"addressCountry": "{{ shop.address.country | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}"{% endif %}
        }{% if shop.address.phone != blank %},
        "telephone": "{{ shop.address.phone | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}"{% endif %}
    }

</script>
{% endif %}