<div class="customer-register">
  <div class="customer-register__header">
    <h1 class="customer-register__heading">{{ 'customer.register.title' | t }}</h1>
  </div>
  <div class="customer-register__form">
    {% form 'create_customer' %}
    {{ form.errors | default_errors }}
    <div class="customer-register__form-content">

      <div class="customer-register__form-control">
        <label for="FirstName" class="label-hidden customer-register__label" >
          {{ 'customer.register.first_name' | t }}
        </label>
        <input type="text"
               name="customer[first_name]"
               class="customer-login__input"
               id="FirstName"
               placeholder="{{ 'customer.register.first_name' | t }}"
               autofocus
               required
               {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
      </div>
      <div class="customer-register__form-control">
        <label for="LastName" class="label-hidden customer-register__label">
          {{ 'customer.register.last_name' | t }}
        </label>
        <input type="text"
               name="customer[last_name]"
               class="customer-login__input"
               id="LastName"
               placeholder="{{ 'customer.register.last_name' | t }}"
               required
               {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
      </div>
      <div class="customer-register__form-control">
        <label for="Email" class="label-hidden customer-register__label">
          {{ 'customer.register.email' | t }}
        </label>
        <input type="email"
               name="customer[email]"
               class="customer-login__input"
               id="Email"
               class="{% if form.errors contains 'email' %}input-error{% endif %}"
               placeholder="{{ 'customer.register.email' | t }}"
               value="{% if form.email %}{{ form.email }}{% endif %}"
               spellcheck="false"
               autocomplete="off"
               autocapitalize="off"
               required>
      </div>

      <div class="customer-register__form-control">
        <label for="tel" class="label-hidden customer-register__label">
          Tel
        </label>
        <input type="tel"
               name="customer[note][tel]"
               class="customer-login__input"
               id="tel"
               class="{% if form.errors contains 'tel' %}input-error{% endif %}"
               placeholder="Tel"
               value=""
               spellcheck="false"
               autocomplete="on"
               autocapitalize="off"
               required>
      </div>

      <div class="customer-register__form-control">
        <label for="company" class="label-hidden customer-register__label">
          Company
        </label>
        <input type="text"
               name="customer[note][company]"
               class="customer-login__input"
               id="company"
               class="{% if form.errors contains 'company' %}input-error{% endif %}"
               placeholder="Company"
               value=""
               spellcheck="false"
               autocomplete="on"
               autocapitalize="off"
               required>
      </div>
      <div class="customer-register__form-control">
        <label for="company" class="label-hidden customer-register__label">
          How did you hear about Us?
        </label>
        <select
            name="customer[notes][referrer]"
            class="new-address-form__form-select"
            id="referrer"
            placeholder="How did you hear about Us?"
            data-default="{{ form.country }}">
          <option value="Social Media">Social Media</option>
          <option value="Trade Show ">Trade Show </option>
          <option value="fiat">Press</option>
          <option value="audi">Web</option>
          <option value="audi">Word of Mouth</option>
        </select>
      </div>

      <div class="customer-register__form-control">
        <label for="CreatePassword" class="label-hidden customer-register__label">
          {{ 'customer.register.password' | t }}
        </label>
        <input type="password"
               name="customer[password]"
               class="customer-login__input"
               id="CreatePassword"
               class="{% if form.errors contains 'password' %}input-error{% endif %}"
               placeholder="{{ 'customer.register.password' | t }}"
               required>
      </div>


      <input class="customer-login__submit btn " type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">

      <div class="customer-register__control-links">
        <a class="customer-login__link " href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
      </div>
    </div>
    {% endform %}
  </div>
</div>

{% form 'contact' %}

  {% if form.posted_successfully? %}
    <p class="form-success">
      {{ 'contact.form.post_success' | t }}
    </p>
  {% endif %}

  {{ form.errors | default_errors }}

<label for="ContactFormName">{{ 'contact.form.name' | t }}</label>
<input type="text"
       name="contact[name]"
       id="ContactFormName"
       placeholder="{{ 'contact.form.name' | t }}"
       value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">

<label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
<input type="email"
       name="contact[email]"
       id="ContactFormEmail"
       placeholder="{{ 'contact.form.email' | t }}"
       value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
       spellcheck="false"
       autocomplete="off"
       autocapitalize="off">

<label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
<input type="tel"
       name="contact[phone]"
       id="ContactFormPhone"
       placeholder="{{ 'contact.form.phone' | t }}"
       value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
       pattern="[0-9\-]*">

<label for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
<textarea rows="10"
          name="contact[body]"
          id="ContactFormMessage"
          placeholder="{{ 'contact.form.message' | t }}">
    {% if form.body %}
      {{ form.body }}
    {% endif %}
  </textarea>

<input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">

{% endform %}
