<!doctype html>
<!--[if IE 9]> <html class="ie9 no-js supports-no-cookies" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js supports-no-cookies" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
  <!-- HEAD CONTENT -->
  {% include 'head' %}
  <!-- TYPEKIT -->
  {%  include 'typekit' %}
  <!-- ADDITIONAL HEAD CONTENT (content_for_header) -->
  {{ content_for_header }}
</head>

<body id="{{ page_title | handle }}" class="template-{{ template.name | handle }} {% if customer %} customer--in {% else %} customer--out {% endif %}">
<div id="page" class="site">

  <div class="site__accessibility">
    <a class="accessibility__link in-page-link visually-hidden skip-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>
  </div>

  {% section 'header' %}

  <main role="main" id="MainContent" class="site__main">
    <div class="main">
      <div class="main__content">
        {% case template %}
        {% when 'index' %}
        {{ content_for_layout }}
        {% when 'customers/login' %}
        {{ content_for_layout }}
        {% when 'customers/register' %}
        {{ content_for_layout }}
        {% else %}
        {% if customer %}
          {%   if customer.tags  contains 'active' %}
            {% if customer.tags contains 'inactive' %}
              {% include 'main-content-inactive' %}
            {% else %}
              {{ content_for_layout }}
            {% endif %}
            {% else %}
              {% include 'main-content-inactive' %}
            {% endif %}
        {% else %}
          {% include 'main-content-restricted' %}
        {% endif %}
        {% endcase %}
      </div>
    </div>
  </main>
  {% section 'footer' %}
</div>




</body>
</html>
