<div class="collection-list is-{{ section.settings.collection_list_layout }}">
  {% if section.settings.title != blank %}
    <div class="collection-list__header">
      <h2 class="collection-list__heading">{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  <ul class="collection-list__list">
    {% for block in section.blocks limit: section.blocks.size %}
      <li class="collection-list__item">
        <div class="collect-list__collection-thumb">
        {% include "collection-thumb" %}
        </div>
      </li>
    {% endfor %}
  </ul>

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>

